<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swaqly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_pantone</item>
        <item name="colorPrimaryDark">@color/flame</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/jet</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/smoky_black</item>
        <item name="colorSecondaryVariant">@color/spanish_gray</item>
        <item name="colorOnSecondary">@color/silver_chalice</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="hintTextColor">@color/cadet</item>
    </style>

    <style name="scroll_view_style">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">
            @dimen/layout_marginHorizontal
        </item>
        <item name="android:layout_marginVertical" tools:targetApi="o">
            @dimen/layout_marginVertical
        </item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_header">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/metropolis_extra_bold</item>
    </style>

    <style name="text_view_for_details">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:textSize">@dimen/header_details_text_size</item>
    </style>

    <style name="header_details" parent="text_view_for_details">
        <item name="android:layout_marginTop">@dimen/header_details_top_margin</item>
    </style>

    <style name="text_input_layout">
        <item name="boxBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_size</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_size</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_size</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_size</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="boxStrokeErrorColor">@color/ups_dell_red</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="general_text_input_layout" parent="text_input_layout">
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="password_text_input_layout" parent="text_input_layout">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="text_input_layout_with_top_margin_36" parent="general_text_input_layout">
        <item name="android:layout_marginTop">@dimen/layout_margin_top_36</item>
    </style>

    <style name="general_text_input_layout_with_top_margin_28" parent="general_text_input_layout">
        <item name="android:layout_marginTop">@dimen/layout_margin_top_28</item>
    </style>

    <style name="password_text_input_layout_with_top_margin_28" parent="password_text_input_layout">
        <item name="android:layout_marginTop">@dimen/layout_margin_top_28</item>
    </style>

    <style name="orange_button_style">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top_28</item>
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_field">
        <item name="paddingStart">@dimen/horizontal_padding</item>
        <item name="paddingEnd">@dimen/horizontal_padding</item>
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>